<%= form_with(model: link,html: {class: "bg-white shadow-lg rounded-lg px-8 pt-6 pb-8 mb-4"}) do |form| %>

  <div>
    <%= form.label :title, style: "display: block", class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :url, style: "display: block", class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :url, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <br>
  <div>
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
